<ScrollView android:id="@+id/scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.petoskeypaladins.frcscoutingapp.ScoutingSheet">


    <RelativeLayout android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants">




        <EditText android:id="@+id/round_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"
            android:gravity="center_horizontal"
            android:hint="@string/round_number"
            android:imeOptions="actionDone"/>

        <EditText android:id="@+id/team_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="@dimen/margin_x_small"
            android:hint="@string/team_number"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@id/round_number"
            android:imeOptions="actionDone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/auton_label"
            android:text="@string/auton_mode"
            android:textSize="@dimen/header"
            android:layout_marginLeft="@dimen/margin_small"
            android:textStyle="bold"
            android:layout_below="@id/round_number"/>

        <CheckBox android:id="@+id/can_auton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auton_label"
            android:text="@string/can_auton"
            android:textSize="@dimen/item_label"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"

            />

        <TextView android:id="@+id/n_totes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/can_auton"
            android:text="@string/n_totes"
            android:textSize="@dimen/group_label"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"
            android:textColor="@color/black"/>

        <RadioGroup android:id="@+id/can_totes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/n_totes"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_small"
            android:checkedButton="@+id/zero_auton_tote">

            <RadioButton android:id="@+id/zero_auton_tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="0"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/one_auton_tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="1"
                android:textSize="@dimen/item_label"/>

            <RadioButton android:id="@+id/two_auton_tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="2"
                android:textSize="@dimen/item_label"/>

            <RadioButton android:id="@+id/three_auton_tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="3"
                android:textSize="@dimen/item_label"/>



        </RadioGroup>

        <CheckBox android:id="@+id/can_stack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_stack"
            android:textSize="@dimen/item_label"
            android:layout_below="@+id/can_totes"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"/>

        <TextView android:id="@+id/can_can_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/can_stack"
            android:text="@string/n_cans"
            android:textSize="@dimen/group_label"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"
            android:textColor="@color/black"/>

        <RadioGroup android:id="@+id/can_can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/can_can_label"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_small"
            android:checkedButton="@+id/zero_auton_can">

            <RadioButton android:id="@+id/zero_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="0"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/one_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="1"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/two_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="2"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/three_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="3"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/four_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="4"
                android:textSize="@dimen/item_label"
                />

        </RadioGroup>

        <TextView android:id="@+id/teleop_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teleop_mode"
            android:textSize="@dimen/header"
            android:layout_below="@id/can_can"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:textStyle="bold" />

        <TextView android:id="@+id/pickup_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickup"
            android:textColor="@color/black"
            android:textSize="@dimen/group_label"
            android:layout_below="@id/teleop_label"
            android:layout_marginTop="@dimen/margin_x_small"
            android:layout_marginLeft="@dimen/margin_small"/>

        <RadioGroup android:id="@+id/pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickup_label"
            android:layout_marginLeft="@dimen/margin_small">

            <RadioButton android:id="@+id/human_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/human_pickup"
                android:textSize="@dimen/item_label"
                android:layout_marginLeft="@dimen/margin_small"/>

            <RadioButton android:id="@+id/landfill_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landfill_pickup"
                android:textSize="@dimen/item_label"
                android:layout_marginLeft="@dimen/margin_small"/>

        </RadioGroup>

        <TextView android:id="@+id/stacks_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stacks_label"
            android:textSize="@dimen/sub_header"
            android:textColor="@color/black"
            android:layout_below="@id/pickup"
            android:layout_marginTop="@dimen/margin_x_small"
            android:layout_marginLeft="@dimen/margin_small"/>

        <Button android:id="@+id/add_stack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_stack"
            android:onClick="addStack"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_below="@id/stacks_label"/>

        <Button android:id="@+id/remove_stack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove_stack"
            android:layout_alignTop="@+id/add_stack"
            android:layout_toRightOf="@+id/add_stack" />

        <LinearLayout android:id="@+id/stack_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/add_stack"
            android:layout_marginLeft="@dimen/margin_small">





        </LinearLayout>

        <Button android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stack_container"
            android:text="@string/submit"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_large" />

        <LinearLayout android:id="@+id/spotlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <requestFocus />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>
