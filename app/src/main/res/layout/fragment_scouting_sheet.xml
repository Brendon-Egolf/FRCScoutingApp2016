<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.petoskeypaladins.recyclerushscouting.ScoutingSheet">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/auton_label"
            android:text="@string/auton_mode"
            android:textSize="@dimen/header"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:textStyle="bold" />

        <CheckBox android:id="@+id/can_auton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auton_label"
            android:text="@string/can_auton"
            android:textSize="@dimen/item_label"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"

            />

        <TextView android:id="@+id/n_totes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/can_auton"
            android:text="@string/n_totes"
            android:textSize="@dimen/group_label"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"
            android:textColor="@color/black"/>

        <RadioGroup android:id="@+id/can_totes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/n_totes"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_small"
            android:checkedButton="@+id/zero_auton_tote">

            <RadioButton android:id="@+id/zero_auton_tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="0"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/one_auton_tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="1"
                android:textSize="@dimen/item_label"/>

            <RadioButton android:id="@+id/two_auton_tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="2"
                android:textSize="@dimen/item_label"/>

            <RadioButton android:id="@+id/three_auton_tote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="3"
                android:textSize="@dimen/item_label"/>

        </RadioGroup>

        <CheckBox android:id="@+id/can_stack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_stack"
            android:textSize="@dimen/item_label"
            android:layout_below="@+id/can_totes"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"/>

        <TextView android:id="@+id/can_can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/can_stack"
            android:text="@string/n_cans"
            android:textSize="@dimen/group_label"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_x_small"
            android:textColor="@color/black"/>

        <RadioGroup android:id="@+id/can_burgle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/can_can"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_small"
            android:checkedButton="@+id/zero_auton_can">

            <RadioButton android:id="@+id/zero_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="0"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/one_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="1"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/two_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="2"
                android:textSize="@dimen/item_label"
                />

            <RadioButton android:id="@+id/three_auton_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="3"
                android:textSize="@dimen/item_label"
                />

        </RadioGroup>

        <TextView android:id="@+id/teleop_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teleop_mode"
            android:textSize="@dimen/header"
            android:layout_below="@id/can_burgle"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:textStyle="bold" />

        <TextView android:id="@+id/pickup_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickup"
            android:textColor="@color/black"
            android:textSize="@dimen/group_label"
            android:layout_below="@id/teleop_label"
            android:layout_marginTop="@dimen/margin_x_small"
            android:layout_marginLeft="@dimen/margin_small"/>

        <RadioGroup android:id="@+id/pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickup_label"
            >
            <RadioButton android:id="@+id/human_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RadioGroup>

    </RelativeLayout>

</FrameLayout>
